.uni-tab-item {
  display: inline-block;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  padding-left: 34rpx;
  padding-right: 34rpx;
}
.uni-tab-item-title {
  color: #555;
  font-size: 30rpx;
  height: 80rpx;
