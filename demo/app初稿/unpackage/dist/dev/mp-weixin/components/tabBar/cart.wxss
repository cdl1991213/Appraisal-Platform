}
.underlinebox {
  height: 3px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-content: center;
          align-content: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-transition: 0.5s;
  transition: 0.5s;
  height: 4px;
  background-color: #ec706b;
  margin-top: -10px;
}
.underlinebox-active {
  background-color: none;
}
